  <script>
    let error = document.getElementById("error-label");
    if(window.location.search.includes("error")) {
      error.hidden = false;
      error.textContent = "Usuario y/o contraseña incorrecta";
    } else {
      error.hidden = true;
      error.textContent = "";
    }
  </script>
